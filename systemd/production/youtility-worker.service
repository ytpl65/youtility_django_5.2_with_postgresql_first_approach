[Unit]
Description=YOUTILITY PostgreSQL Task Worker (Production)
After=network.target postgresql.service
Wants=postgresql.service

[Service]
Type=simple
User=redmine
Group=redmine
WorkingDirectory=/home/redmine/django5_project/YOUTILITY3
Environment=DJANGO_SETTINGS_MODULE=intelliwiz_config.settings
Environment=VIRTUAL_ENV=/home/redmine/django5_project/env
Environment=PATH=/home/redmine/django5_project/env/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/home/redmine/django5_project/env/bin/python manage.py run_postgresql_worker --queues default email reports --max-concurrent 6 --heartbeat-interval 30 --log-level INFO
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=youtility-worker

# Resource limits
LimitNOFILE=65536
MemoryHigh=1G
MemoryMax=2G

# Security settings (Production)
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/django5
ReadWritePaths=/home/redmine/django5_project/YOUTILITY3/logs
ReadWritePaths=/tmp

[Install]
WantedBy=multi-user.target